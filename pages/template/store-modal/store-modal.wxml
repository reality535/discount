<template name="storeModalTemplate">
  <view class="modalBox">
      <view class="overLay"></view>
      <scroll-view class="alertContent" scroll-y="{{true}}">
          <view class="detail_title">{{detail_store}}</view>
          <view class="detail_content">
            <view class="detail_c">活动内容：</view>
            <view>
              {{detail_discount}}
            </view>
            <view class="detail_t">活动时间：</view>
            <view>
              {{detail_start}}至{{detail_end}}
            </view>
          </view>
      </scroll-view>
  </view>
</template>